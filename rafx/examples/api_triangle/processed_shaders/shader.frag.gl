#version 330
#ifdef GL_ARB_shading_language_420pack
#extension GL_ARB_shading_language_420pack : require
#endif

layout(binding = 0, std140) uniform PerViewData
{
    vec4 uniform_color;
} uniform_data;

layout(location = 0) out vec4 out_color;
