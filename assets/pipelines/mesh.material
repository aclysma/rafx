                    (
                        descriptor_set_layout_bindings: [
                            (
                                binding: 0,
                                descriptor_type: UniformBuffer,
                                descriptor_count: 1,
                                stage_flags: Fragment,
                                slot_name: "material_data",

                                internal_buffer_per_descriptor_size: Some(80)
                            ),
                            (
                                binding: 1,
