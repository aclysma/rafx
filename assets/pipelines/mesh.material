                    (
                        descriptor_set_layout_bindings: [
                            (
                                binding: 0,
                                descriptor_type: UniformBuffer,
                                descriptor_count: 1,
                                stage_flags: Fragment,
                                slot_name: "per_frame_data",

                                internal_buffer_per_descriptor_size: Some(3728)
                            ),
                            (
                                binding: 1,
                                descriptor_type: Sampler,
                                descriptor_count: 0,
                                stage_flags: Fragment,
